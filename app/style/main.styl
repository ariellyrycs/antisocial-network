$theme = #c9e2b3;
$secondTheme = #222222;
$mainMarginHorizontally = 5em;
$mainMarginVertically = 5em;
vendors = webkit moz ms;
cal()
  if current-property
    for prefix in vendors
      arguments = unquote(arguments)
      add-property(current-property[0], s('-%s-calc(%s)', prefix, arguments))
    s('calc(%s)', arguments)
  else
    error('calc() must be used within a property')


@import url(http://fonts.googleapis.com/css?family=Molengo);

html, body, main, .window-size{
  height:100%;

}

body {
  background-color:$theme;
}

main{
  min-height: 100%;
}

footer {
  background-color:$secondTheme;
  clear: both;
  position: relative;
  z-index: 10;
  height: 5em;
  margin-top: -5em;
}
h1 {
  text-align: center;
}

  /*media queries*/
.center {
  margin:$mainMarginVertically $mainMarginHorizontally;
  width:cal('100% - ' + ($mainMarginVertically * 2));
  height:cal('100% - ' +  ($mainMarginVertically * 2) );
}

.main-content {
  height: 100%;

  margin: 0 3%;
  float: right;
}

.exhibit {
  width: 50%;
  background-color #00b3ee;
}

.sign-box {
  width: 38%;
  background-color #00b3ee;
}

.social-buttons {
  width: 80%;
  margin: auto;
}

.sign-in-problem {
  position: fixed;
  right: 0;
  top: -100px;
  height: 100px;
  width: 300px;
  opacity:0;
}
.sign-in-problem.active {
  -webkit-animation: show-alert 5s;
}

.button-outline:hover {
  text-decoration: none;
  color: #ddd;
  border-color: #ddd;
}
.button-outline {
  -webkit-font-smoothing: antialiased;
  display: inline-block;
  vertical-align: middle;
  zoom: 1;
  color: #fff;
  padding: 12px 31px;
  border: 2px solid #fff;
  border-radius: 4px;
  font-size: 16px;
  font-weight: 400;
  background: rgba(0, 0, 0, 0.15);
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
  -webkit-transition: all 0.2s linear;
  -moz-transition: all 0.2s linear;
  -ms-transition: all 0.2s linear;
  -o-transition: all 0.2s linear;
  transition: all 0.2s linear;
}

























